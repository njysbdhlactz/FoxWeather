/* weather.wxss */
.content{
  background-attachment: fixed;
  background-image: url(http://www.foxweather.cn/ZXCimages/bg.jpg);
  background-repeat: no-repeat;
  background-size:cover;
  height: 1200rpx;
}
.weather{
  width:95%;
  height: 210rpx;
}
.panle1{
flex-direction:row;
display: flex;
}
.city{
  width: 50%;
  text-align:center;
  }
.city image{
  width: 30rpx;
  height: 30rpx;
}
.aqi{
  width: 50%;
  text-align:center;
}
.lb{
  text-align:right;
  height: 20%;
  font-size: 24rpx;
}
.aqi1{
  text-align:right;
  height: 20%;
  font-size: 92rpx;
}
.panle2{
  flex-direction:row;
  display: flex;
}
.num1{
  width: 50%;
  height: 50%;
  text-align:center;
  font-size: 92rpx;
} 
.num2{
  width: 50%;
  height: 50%;
  text-align:center;
}
.num2 text{
  font-size: 36rpx;
}
.num2 image{
  width: 36rpx;
  height: 36rpx;
}
.paiming{
  width: 100%;
  height: 60rpx;
  text-align:left;
  margin-top: 20rpx;
  background-color:rgba(0, 0, 0, 0.5);
  color: #eee;
}
.paiming text{
  padding: 0px 0px 0px 100rpx;
}
.paiming image{
  width: 40rpx;
  height: 40rpx;
}
.airlizi{
  width: 100%;
  height: 300rpx;
  background-color:rgba(0, 0, 0, 0.5);
  padding: 18rpx;
  color: #eee;

}
.yizhou{
  width: 95%;
  height: 300rpx;
  margin-top: 50rpx;
  background-color:rgba(0, 0, 0, 0.5);
  padding: 18rpx;
  color: #eee;
}
.yubao{
  flex-direction:row;
  width: 100%;
  display: flex;
  height: 140rpx;
  margin-top: 50rpx;
  background-color:rgba(0, 0, 0, 0.5);
  padding: 8rpx;
  color: #eee;
  justify-content: space-between;
}
.day1{
  text-align:center;
  width: 50%;
} 
.day2{
  text-align:center;
  width: 50%;
}
.life{
  width: 95%;
  height: 650rpx;
  margin-top: 50rpx;
  background-color:rgba(0, 0, 0, 0.5);
  padding: 18rpx;
  color: #eee;
}
.hr{
    height:5rpx;
    width: 100%;
    opacity:0.2;
}
.table{
  border:0px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}
.table1{
  border:2rpx solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 96%;
}
.table2{
  border-right: 2rpx solid #dadada;
  border-bottom: 0;
  width: 96%;
}
.th1,.td1 {
  border-bottom: 2rpx solid #dadada;
  border-right: 2rpx solid #dadada;
  text-align: center;
  width:100%
}
.th1 image{
  width: 96rpx;
  height: 96rpx;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  border-bottom: 0px solid #dadada;
  border-right: 0px solid #dadada;
  text-align: center;
  width:100%
}
.ti{
  width: 100%;
  display: flex;
  text-align:left;
  padding: 4rpx 4rpx 4rpx 20rpx;
}
.th {
  padding: 10rpx;
}
.th image{
  width: 32rpx;
  height: 32rpx;
}
.ti image{
  width: 64rpx;
  height: 64rpx;
}